<% if genre.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% genre.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: genre, local: true do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => 'form-control' %><br><br>
  
    <%= f.submit %>  
<% end %>
