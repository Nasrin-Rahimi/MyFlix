<h1>New Genre</h1>

<% if @genre.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @genre.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @genre, local: true do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>
  </div>

  <div>
    <%= f.submit %>  
  </div>
<% end %>

<%= link_to 'Back', genres_path %>

