<h1><%= @genre.title %></h1>

<%= link_to 'Back', genres_path %>

<ul>
  <li><%= link_to 'Edit Genre', edit_genre_path(@genre) %></li>
  <li><%= link_to "Delete Genre", genre_path(@genre),
                method: :delete,
                data: { confirm: "Are you sure?" } %></li>
</ul>

<h2>Videos</h2>
<%= render @genre.videos %>

<h2>Add a Video:</h2>
<%= form_with model: [ @genre, @genre.videos.build ], local: true do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => 'form-control'  %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, :class => 'form-control'  %>
  </p>
  <p>
    <%= f.label :video_url %><br>
    <%= f.text_field :video_url, :class => 'form-control'  %>
  </p>
  <p>
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url, :class => 'form-control'  %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>