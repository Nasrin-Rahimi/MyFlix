<h1>Users</h1>

<table class="table" >
    <tr>
        <th>User Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th></th>
    </tr>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone_number %></td>
            <td><%= link_to "Delete User", user_path(user),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></td>
        </tr>
    <% end %>
</table>